<h5>GODLY LIVING - MEN</h5>
<%= link_to 'New Book', new_man_path %>
<table class="horizontal_table" style="width: 100%; height: 10px;" border="0">
  <thead>
    <tr>
      <th width="38%">Title</th>
      <th width="25%">Author</th>
      <th width="15%">Publisher</th>
      <th width="10%">Year</th>
      <th width="10%">More</th>
       <th width="2%"></th>
      </tr>
  </thead>

  <tbody>
    <% @men.each do |man| %>
      <tr>
        <td width="38%" ><%= man.title %></td>
        <td width="25%" ><%= man.author %></td>
        <td width="15%"><%= man.publisher %></td>
        <td width="10%"><%= man.year %></td>
        <td width="10%"><%= link_to 'Show', man %></td>
        <td width="2%"><%= link_to 'X', man, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>




