<div class="row">     
   <div class="large-9 push-3 columns" >
<%= form_for(@topic_article) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
 <%= link_to 'Back', topic_articles_path %>
   </div>
 </div>
