<h5>APOLOGETICS</h5>
<%= link_to 'New book', new_apologetic_path %>
<table class="horizontal_table" style="width: 100%; height: 10px;" border="0">
  <thead>
    <tr>
      <th width="38%">Title</th>
      <th width="25%">Author</th>
      <th width="15%">Publisher</th>
      <th width="10%">Year</th>
      <th width="10%">More</th>
       <th width="2%"></th>
      </tr>
  </thead>

  <tbody>
    <% @apologetics.each do |apologetic| %>
      <tr>
        <td width="38%" ><%= apologetic.title %></td>
        <td width="25%"><%= apologetic.author %></td>
        <td width="15%"><%= apologetic.publisher %></td>
        <td width="10%"><%= apologetic.year %></td>
        <td width="10%"><%= link_to 'Show', apologetic %></td>
        <td width="2%"><%= link_to 'X', apologetic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


