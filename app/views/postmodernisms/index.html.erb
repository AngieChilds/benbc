<h5>POSTMODERNISM & WORLDVIEWS</h5>
<%= link_to 'New Book', new_postmodernism_path %>
<table class="horizontal_table" style="width: 100%; height: 10px;" border="0">
  <thead>
    <tr>
      <th width="38%">Title</th>
      <th width="25%">Author</th>
      <th width="15%">Publisher</th>
      <th width="10%">Year</th>
      <th width="10%">More</th>
       <th width="2%"></th>
      </tr>
  </thead>

  <tbody>
    <% @postmodernisms.each do |postmodernism| %>
      <tr>
        <td width="38%" ><%= postmodernism.title %></td>
        <td width="25%"><%= postmodernism.author %></td>
        <td width="15%" ><%= postmodernism.publisher %></td>
        <td width="10%"><%= postmodernism.year %></td>
        <td width="10%"><%= link_to 'Show', postmodernism %></td>
        <td width="2%"><%= link_to 'X', postmodernism, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

